@page
@model WebApp.Pages.Empleado.CreateEmpleado
@{
    ViewData["Title"] = "Create Empleado";
}

<h1>Create Empleado</h1>
<hr/>

<div class="row">
    <div class="col-6">
        <form method="post">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleados.Nombre" class="control-label"></label>
                <input asp-for="Empleados.Nombre" class="form-control"/>
                <span asp-validation-for="Empleados.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.CUI" class="control-label"></label>
                <input asp-for="Empleados.CUI" class="form-control" />
                <span asp-validation-for="Empleados.CUI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleados.SucursalId" class="control-label"></label>
                <input asp-for="Empleados.SucursalId" class="form-control" />
                <span asp-validation-for="Empleados.SucursalId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-page="Index" class="btn btn-danger">Back</a>
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts{
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}